#==========================================================================
# TUNAS MOTOR - Environment Configuration Template
#==========================================================================
# Copy file ini menjadi .env dan sesuaikan nilainya
# cp env.example .env (Linux/Mac) atau copy env.example .env (Windows)
#==========================================================================

#--------------------------------------------------------------------------
# Application Settings
#--------------------------------------------------------------------------

APP_NAME="Tunas Motor"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://tunasmotor.test

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance Mode (file atau cache)
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------
# Supported: sqlite, mysql, mariadb, pgsql, sqlsrv

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=xxxxxxxx
DB_USERNAME=xxxx
DB_PASSWORD=xxxxxxx

#--------------------------------------------------------------------------
# Redis Configuration (Optional - untuk caching/queue/session)
#--------------------------------------------------------------------------

# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=null
# REDIS_USERNAME=null
# REDIS_DB=0
# REDIS_CACHE_DB=1

# Redis Advanced Options
# REDIS_URL=
# REDIS_CLUSTER=redis
# REDIS_PREFIX=tunasmotor-database-
# REDIS_PERSISTENT=false
# REDIS_MAX_RETRIES=3
# REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
# REDIS_BACKOFF_BASE=100
# REDIS_BACKOFF_CAP=1000

#--------------------------------------------------------------------------
# Cache Configuration
#--------------------------------------------------------------------------
# Supported: array, database, file, memcached, redis, dynamodb, octane, null

CACHE_STORE=database
# CACHE_PREFIX=tunasmotor-cache-

# Database Cache Options
# DB_CACHE_CONNECTION=
# DB_CACHE_TABLE=cache
# DB_CACHE_LOCK_CONNECTION=
# DB_CACHE_LOCK_TABLE=

# Memcached Options
# MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211
# MEMCACHED_PERSISTENT_ID=
# MEMCACHED_USERNAME=
# MEMCACHED_PASSWORD=

# Redis Cache Options
# REDIS_CACHE_CONNECTION=cache
# REDIS_CACHE_LOCK_CONNECTION=default

#--------------------------------------------------------------------------
# Session Configuration
#--------------------------------------------------------------------------
# Supported: file, cookie, database, memcached, redis, dynamodb, array

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_EXPIRE_ON_CLOSE=false

# Session Cookie Options
# SESSION_COOKIE=tunasmotor-session
# SESSION_PATH=/
# SESSION_DOMAIN=null
# SESSION_SECURE_COOKIE=true
# SESSION_HTTP_ONLY=true
# SESSION_SAME_SITE=lax
# SESSION_PARTITIONED_COOKIE=false

# Database Session Options
# SESSION_CONNECTION=
# SESSION_TABLE=sessions
# SESSION_STORE=

#--------------------------------------------------------------------------
# Queue Configuration
#--------------------------------------------------------------------------
# Supported: sync, database, beanstalkd, sqs, redis, null

QUEUE_CONNECTION=database
# QUEUE_FAILED_DRIVER=database-uuids

# Database Queue Options
# DB_QUEUE_CONNECTION=
# DB_QUEUE_TABLE=jobs
# DB_QUEUE=default
# DB_QUEUE_RETRY_AFTER=90

# Redis Queue Options
# REDIS_QUEUE_CONNECTION=default
# REDIS_QUEUE=default
# REDIS_QUEUE_RETRY_AFTER=90

# Beanstalkd Options
# BEANSTALKD_QUEUE_HOST=localhost
# BEANSTALKD_QUEUE=default
# BEANSTALKD_QUEUE_RETRY_AFTER=90

#--------------------------------------------------------------------------
# Filesystem Configuration
#--------------------------------------------------------------------------
# Supported: local, public, s3

FILESYSTEM_DISK=public

#--------------------------------------------------------------------------
# Logging Configuration
#--------------------------------------------------------------------------
# Available: single, daily, slack, syslog, errorlog, monolog, stack

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Daily Log Options
# LOG_DAILY_DAYS=14

# Log Deprecations
LOG_DEPRECATIONS_CHANNEL=null
# LOG_DEPRECATIONS_TRACE=false

# Slack Logging (untuk notifikasi error)
# LOG_SLACK_WEBHOOK_URL=
# LOG_SLACK_USERNAME="Laravel Log"
# LOG_SLACK_EMOJI=":boom:"

# Papertrail Logging
# PAPERTRAIL_URL=
# PAPERTRAIL_PORT=

# Syslog Options
# LOG_SYSLOG_FACILITY=LOG_USER

#--------------------------------------------------------------------------
# Mail Configuration
#--------------------------------------------------------------------------
# Supported: smtp, ses, mailgun, postmark, resend, sendmail, log, array

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tunasmotor.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Options
# MAIL_SCHEME=
# MAIL_URL=
# MAIL_EHLO_DOMAIN=

# Sendmail Options
# MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs -i"

# Mail Log Channel
# MAIL_LOG_CHANNEL=

#--------------------------------------------------------------------------
# Midtrans Payment Gateway Configuration
#--------------------------------------------------------------------------
# Dapatkan kredensial di: https://dashboard.midtrans.com

MIDTRANS_MERCHANT_ID=GXXXXXXX
MIDTRANS_CLIENT_KEY=Mid-client-xxxxxxxxxxxx
MIDTRANS_SERVER_KEY=Mid-server-xxxxxxxxxxxx

# Set ke true untuk production (gunakan kredensial live)
MIDTRANS_IS_PRODUCTION=false

# Security Options
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

#--------------------------------------------------------------------------
# AWS Configuration (Optional - untuk S3, SES, SQS)
#--------------------------------------------------------------------------

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=
# AWS_URL=
# AWS_ENDPOINT=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# SQS Queue
# SQS_PREFIX=https://sqs.ap-southeast-1.amazonaws.com/your-account-id
# SQS_QUEUE=default
# SQS_SUFFIX=

# DynamoDB Cache
# DYNAMODB_CACHE_TABLE=cache
# DYNAMODB_ENDPOINT=

#--------------------------------------------------------------------------
# Third-Party Services (Optional)
#--------------------------------------------------------------------------

# Postmark
# POSTMARK_API_KEY=

# Resend
# RESEND_API_KEY=

# Slack Notifications
# SLACK_BOT_USER_OAUTH_TOKEN=
# SLACK_BOT_USER_DEFAULT_CHANNEL=

#--------------------------------------------------------------------------
# Vite Configuration
#--------------------------------------------------------------------------

VITE_APP_NAME="${APP_NAME}"